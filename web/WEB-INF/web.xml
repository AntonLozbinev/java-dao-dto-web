<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>main.java.itstart.listeners.MyHttpSessionListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>requestHandler</servlet-name>
        <servlet-class>main.java.itstart.servlets.RequestHandlerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>requestHandler</servlet-name>
        <url-pattern>/handler</url-pattern>
    </servlet-mapping>
</web-app>